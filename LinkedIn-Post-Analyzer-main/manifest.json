{
  "manifest_version": 3,
  "name": "LinkedIn Post Collector",
  "description": "Scrape LinkedIn posts and export as JSON/CSV",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "*://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["src/content/scraper.js"]
    }
  ]
}
